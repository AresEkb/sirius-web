<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0 http://maven.apache.org/xsd/settings-1.0.0.xsd">

    <activeProfiles>
        <activeProfile>nexus</activeProfile>
    </activeProfiles>

    <profiles>
        <profile>
            <id>nexus</id>
            <properties>
                <altReleaseDeploymentRepository>metamodel-nexus-releases::https://nexus.metamodel.dev/repository/maven-releases</altReleaseDeploymentRepository>
                <altSnapshotDeploymentRepository>metamodel-nexus-snapshots::https://nexus.metamodel.dev/repository/maven-snapshots</altSnapshotDeploymentRepository>
            </properties>
            <repositories>
                <repository>
                    <id>metamodel-nexus-releases</id>
                    <name>Metamodel Nexus Releases</name>
                    <url>https://nexus.metamodel.dev/repository/maven-releases</url>
                </repository>
                <repository>
                    <id>metamodel-nexus-snapshots</id>
                    <name>Metamodel Nexus Snapshots</name>
                    <url>https://nexus.metamodel.dev/repository/maven-snapshots</url>
                </repository>
            </repositories>
        </profile>
        <profile>
            <id>github</id>
            <properties>
                <altReleaseDeploymentRepository>metamodel-github::https://maven.pkg.github.com/metamodeldev/metamodel</altReleaseDeploymentRepository>
            </properties>
            <repositories>
                <repository>
                    <id>metamodel-github</id>
                    <name>Metamodel GitHub</name>
                    <url>https://maven.pkg.github.com/metamodeldev/metamodel</url>
                </repository>
            </repositories>
        </profile>
    </profiles>

    <servers>
        <server>
            <id>metamodel-nexus-releases</id>
            <username>${env.METAMODEL_NEXUS_USERNAME}</username>
            <password>${env.METAMODEL_NEXUS_PASSWORD}</password>
        </server>
        <server>
            <id>metamodel-nexus-snapshots</id>
            <username>${env.METAMODEL_NEXUS_USERNAME}</username>
            <password>${env.METAMODEL_NEXUS_PASSWORD}</password>
        </server>
        <server>
            <id>metamodel-github</id>
            <username>${env.GITHUB_USERNAME}</username>
            <password>${env.GITHUB_TOKEN}</password>
        </server>
        <server>
            <id>github-flow</id>
            <username>${env.GITHUB_USERNAME}</username>
            <password>${env.GITHUB_PUBLISH_TOKEN}</password>
        </server>
    </servers>
</settings>
